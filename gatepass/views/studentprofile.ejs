<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile - Admin View</title>
    <link rel="stylesheet" href="/stylesheets/studentportal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="/images/4174.png">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        
        /* Admin profile page specific styles */
        .admin-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .admin-header {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .admin-header img {
            height: 60px;
        }
        
        .admin-header h1 {
            color: #fff;
            font-size: 24px;
            margin: 0;
        }
        
        .profile-card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            overflow: hidden;
            margin-bottom: 25px;
        }
        
        .profile-card-header {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            padding: 30px;
            text-align: center;
            color: #fff;
        }
        
        .profile-card-header img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid rgba(255,255,255,0.3);
            object-fit: cover;
            margin-bottom: 15px;
        }
        
        .profile-card-header h2 {
            margin: 0 0 5px 0;
            font-size: 24px;
        }
        
        .profile-card-header .uid {
            background: rgba(255,255,255,0.2);
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 14px;
            display: inline-block;
        }
        
        .profile-card-body {
            padding: 25px;
        }
        
        .form-section {
            margin-bottom: 25px;
        }
        
        .form-section h3 {
            font-size: 16px;
            color: #667eea;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 2px solid #eee;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }
        
        .form-group {
            margin-bottom: 15px;
        }
        
        .form-group label {
            display: block;
            font-size: 12px;
            color: #888;
            margin-bottom: 5px;
            font-weight: 500;
            text-transform: uppercase;
        }
        
        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #eee;
            border-radius: 10px;
            font-size: 14px;
            color: #333;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }
        
        .form-group input:focus,
        .form-group select:focus {
            border-color: #667eea;
            outline: none;
            background: #fff;
        }
        
        .form-group input:disabled,
        .form-group select:disabled {
            background: #f0f0f0;
            cursor: not-allowed;
        }
        
        .btn-group {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 25px;
            flex-wrap: wrap;
        }
        
        .btn {
            padding: 12px 30px;
            border: none;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: #fff;
        }
        
        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(239, 68, 68, 0.4);
        }
        
        .btn-success {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            color: #fff;
        }
        
        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(34, 197, 94, 0.4);
        }
        
        .status-indicator {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: 500;
        }
        
        .status-indicator.restricted {
            background: rgba(239, 68, 68, 0.15);
            color: #ef4444;
        }
        
        .status-indicator.active {
            background: rgba(34, 197, 94, 0.15);
            color: #22c55e;
        }
        
        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #fff;
            text-decoration: none;
            font-weight: 500;
            margin-bottom: 20px;
            transition: all 0.3s ease;
            background: rgba(255,255,255,0.1);
            padding: 10px 20px;
            border-radius: 10px;
        }
        
        .back-link:hover {
            background: rgba(255,255,255,0.2);
            transform: translateX(-5px);
        }
        
        .alert {
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            background: rgba(255,255,255,0.9);
        }
        
        .alert-danger {
            background: rgba(239, 68, 68, 0.15);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.3);
        }
        
        .alert-info {
            background: rgba(102, 126, 234, 0.15);
            color: #667eea;
            border: 1px solid rgba(102, 126, 234, 0.3);
        }
        
        @media (max-width: 768px) {
            .admin-container {
                padding: 15px;
            }
            
            .admin-header {
                flex-direction: column;
                text-align: center;
            }
            
            .admin-header h1 {
                font-size: 20px;
            }
            
            .profile-card-header img {
                width: 100px;
                height: 100px;
            }
            
            .form-grid {
                grid-template-columns: 1fr;
            }
            
            .btn-group {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
                justify-content: center;
            }
        }

        .ctn{

                display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Admin Header -->
        <div class="admin-header" style="display: flex; justify-content: center; align-items: center;">
            <a href="/daterange"><img src="/images/logo.png" alt="Logo"></a>
            <!-- <h1>Student Profile Management</h1> -->
        </div>
        
        <!-- Alert Message -->
        <% if(message && message.length > 0){ %>
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                <%- message %>
            </div>
        <% } %>
        
        <!-- Back Link -->
        <a href="/studentsupdate" class="back-link">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        
        <form action="/updatestudent/<%= result[0].uid%>" method="post">
            <div class="profile-card">
                <!-- Profile Header -->
                <div class="profile-card-header">
                    <% if (result[0].path) { %>
                        <img src="<%= result[0].path%>" alt="Profile Photo">
                    <% } else { %>
                        <img src="/images/blank_profile.webp" alt="Default Avatar">
                    <% } %>
                    <h2><%= result[0].sname%></h2>
                    <div class="ctn">
                         <span class="uid" style="margin-top: 1rem;"><i class="fas fa-id-badge"></i> <%= result[0].uid%></span>
                    <div style="margin-top: 15px;">
                        <span class="status-indicator <%= result[0].status === 'Restrict' ? 'restricted' : 'active' %>">
                            <i class="fas <%= result[0].status === 'Restrict' ? 'fa-ban' : 'fa-check-circle' %>"></i>
                            <%= result[0].status === 'Restrict' ? 'Restricted' : 'Active' %>
                        </span>
                    </div>
                    </div>
                   
                </div>
                
                <!-- Profile Body -->
                <div class="profile-card-body">
                    <!-- Academic Information -->
                    <div class="form-section">
                        <h3><i class="fas fa-graduation-cap"></i> Academic Information</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>Department</label>
                                <select id="dropdownlist2" required name="Department" disabled>
                                    <option value="<%= result[0].dept %>" selected hidden><%= result[0].dept %></option>
                                    <option value="Mechanical Engineering">Mechanical Engineering</option>
                                    <option value="Basic science and humanities">Basic science and humanities</option>
                                    <option value="Computer Engineering">Computer Engineering</option>
                                    <option value="Electronics and Telecommunication">Electronics and Telecommunication</option>
                                    <option value="Electrical Engineering">Electrical Engineering</option>
                                    <option value="Civil Engineering">Civil Engineering</option>
                                    <option value="B Vocational">B Vocational</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Academic Year</label>
                                <input id="academicyear" name="academicyear" type="number" placeholder="YYYY" 
                                       min="2020" max="2030" disabled value="<%= result[0].academicyear %>">
                            </div>
                            <div class="form-group">
                                <label>Year</label>
                                <select id="dropdownlist3" required name="year" disabled>
                                    <option value="<%= result[0].year %>" selected hidden><%= result[0].year %></option>
                                    <option value="1st">1st</option>
                                    <option value="2nd">2nd</option>
                                    <option value="3rd">3rd</option>
                                    <option value="4th">4th</option>
                                    <option value="NA">Not Applicable</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Category</label>
                                <select id="dropdownlist4" required name="category" disabled>
                                    <option value="<%= result[0].category %>" selected hidden><%= result[0].category %></option>
                                    <option value="Hostel">Hostel</option>
                                    <option value="Day Scholar">Day Scholar</option>
                                    <option value="PassOut">PassOut</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Personal Information -->
                    <div class="form-section">
                        <h3><i class="fas fa-user"></i> Personal Information</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>Gender</label>
                                <select id="dropdownlist5" required name="gender" disabled>
                                    <option value="<%= result[0].gender %>" selected hidden><%= result[0].gender %></option>
                                    <option value="MALE">Male</option>
                                    <option value="FEMALE">Female</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Date of Birth</label>
                                <input type="date" id="dob" disabled name="dob" value="<%=result[0].dob %>">
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" placeholder="Address" name="address" id="address" disabled 
                                       value="<%= result[0].address%>">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Contact Information -->
                    <div class="form-section">
                        <h3><i class="fas fa-phone"></i> Contact Information</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>Mobile Number</label>
                                <input type="tel" placeholder="Mobile" name="mobile" id="mobile" 
                                       pattern="[0-9]{10}" disabled value="<%=result[0].mobileno %>">
                            </div>
                            <div class="form-group">
                                <label>Email ID</label>
                                <input type="email" placeholder="Email Id" name="email" id="email" disabled 
                                       value="<%= result[0].email %>">
                            </div>
                            <div class="form-group">
                                <label>Parent's Name</label>
                                <input type="text" placeholder="Parent's Name" name="ParentsName" id="ParentsName" 
                                       disabled value="<%= result[0].parentname%>">
                            </div>
                            <div class="form-group">
                                <label>Parent's Number</label>
                                <input type="text" placeholder="Parent's Number" name="ParentsNumber" id="ParentsNumber" 
                                       disabled value="<%= result[0].parentnumber %>">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Account Status -->
                    <div class="form-section">
                        <h3><i class="fas fa-shield-alt"></i> Account Status</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>Restriction Status</label>
                                <select id="dropdownlist6" required name="Block" disabled>
                                    <option value="<%= result[0].status %>" selected hidden><%= result[0].status %></option>
                                    <option value="Restrict">Restrict</option>
                                    <option value="Unrestrict">Unrestrict</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="btn-group">
                        <button type="button" id="update" class="btn btn-primary" onclick="enableEdit()">
                            <i class="fas fa-edit"></i> Edit Profile
                        </button>
                        <button type="button" id="cancel" class="btn btn-danger" onclick="cancelEdit()" hidden>
                            <i class="fas fa-times"></i> Cancel
                        </button>
                        <button type="submit" id="submit" class="btn btn-success" hidden>
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
    <script>
        function enableEdit() {
            document.getElementById('dropdownlist2').disabled = false;
            document.getElementById('academicyear').disabled = false;
            document.getElementById('dropdownlist3').disabled = false;
            document.getElementById('dropdownlist4').disabled = false;
            document.getElementById('dropdownlist5').disabled = false;
            document.getElementById('dropdownlist6').disabled = false;
            document.getElementById('mobile').disabled = false;
            document.getElementById('email').disabled = false;
            document.getElementById('dob').disabled = false;
            document.getElementById('address').disabled = false;
            document.getElementById('ParentsName').disabled = false;
            document.getElementById('ParentsNumber').disabled = false;
            
            document.getElementById('update').hidden = true;
            document.getElementById('cancel').hidden = false;
            document.getElementById('submit').hidden = false;
        }

        function cancelEdit() {
            document.getElementById('dropdownlist2').disabled = true;
            document.getElementById('academicyear').disabled = true;
            document.getElementById('dropdownlist3').disabled = true;
            document.getElementById('dropdownlist4').disabled = true;
            document.getElementById('dropdownlist5').disabled = true;
            document.getElementById('dropdownlist6').disabled = true;
            document.getElementById('mobile').disabled = true;
            document.getElementById('email').disabled = true;
            document.getElementById('dob').disabled = true;
            document.getElementById('address').disabled = true;
            document.getElementById('ParentsName').disabled = true;
            document.getElementById('ParentsNumber').disabled = true;
            
            document.getElementById('update').hidden = false;
            document.getElementById('cancel').hidden = true;
            document.getElementById('submit').hidden = true;
        }
    </script>
</body>
</html>
