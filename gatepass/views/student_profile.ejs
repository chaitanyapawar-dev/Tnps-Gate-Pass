<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - Student Portal</title>
    <link rel="stylesheet" href="/stylesheets/studentportal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" href="/images/4174.png">
</head>
<body>
    <!-- Mobile Menu Toggle -->
    <button class="menu-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>
    
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay" onclick="toggleSidebar()"></div>
    
    <!-- Sidebar -->
    <div class="sidebar">
        <button class="sidebar-close" onclick="toggleSidebar()">
            <i class="fas fa-times"></i>
        </button>
        <div class="logo">
            <img src="/images/4174.png" alt="Logo">
            <h2>Gate Pass</h2>
        </div>
        
        <ul class="nav-links">
            <li>
                <a href="/student/dashboard">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="/student/profile" class="active">
                    <i class="fas fa-user"></i>
                    <span>My Profile</span>
                </a>
            </li>
            <li>
                <a href="/student/attendance">
                    <i class="fas fa-calendar-check"></i>
                    <span>Attendance</span>
                </a>
            </li>
            <li>
                <a href="/student/passhistory">
                    <i class="fas fa-history"></i>
                    <span>Pass History</span>
                </a>
            </li>
            <li>
                <a href="/student/requestpass">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Request Pass</span>
                </a>
            </li>
            <li>
                <a href="/student/notifications">
                    <i class="fas fa-bell"></i>
                    <span>Notifications</span>
                </a>
            </li>
        </ul>
        
        <div class="user-info">
            <div class="user-detail">
                <img src="<%= student.path || '/images/default-avatar.png' %>" alt="Profile">
                <div>
                    <div class="name"><%= student.sname %></div>
                    <div class="role"><%= student.uid %></div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <div class="topbar">
            <div class="page-title">
                <h1>My Profile</h1>
                <p>View and manage your profile information</p>
            </div>
            
            <div class="user-actions">
                <a href="/student/notifications" class="notification-btn">
                    <i class="fas fa-bell"></i>
                </a>
                <a href="/student/logout" class="logout-btn" style="text-decoration: none;">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </div>
        </div>
        
        <% if(message && message.length > 0){ %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <%- message %>
            </div>
        <% } %>
        
        <!-- Profile Header -->
        <div class="profile-header">
            <img src="<%= student.path || '/images/default-avatar.png' %>" alt="Profile" class="profile-image">
            <div class="profile-info">
                <h1><%= student.sname %></h1>
                <p><i class="fas fa-graduation-cap"></i> <%= student.dept || 'Department' %> - <%= student.year || 'Year' %></p>
                <p><i class="fas fa-envelope"></i> <%= student.email || 'No email' %></p>
                <div class="uid-badge">
                    <i class="fas fa-id-badge"></i> <%= student.uid %>
                </div>
            </div>
        </div>
        
        <!-- Profile Details -->
        <div class="content-section">
            <div class="section-header">
                <h2><i class="fas fa-info-circle"></i> Personal Information</h2>
            </div>
            
            <div class="profile-grid">
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-user"></i></div>
                    <div class="details">
                        <label>Full Name</label>
                        <span><%= student.sname || 'N/A' %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-id-badge"></i></div>
                    <div class="details">
                        <label>Student UID</label>
                        <span><%= student.uid %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-envelope"></i></div>
                    <div class="details">
                        <label>Email</label>
                        <span><%= student.email || 'N/A' %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-phone"></i></div>
                    <div class="details">
                        <label>Mobile Number</label>
                        <span><%= student.mobileno || 'N/A' %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-venus-mars"></i></div>
                    <div class="details">
                        <label>Gender</label>
                        <span><%= student.gender || 'N/A' %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-birthday-cake"></i></div>
                    <div class="details">
                        <label>Date of Birth</label>
                        <span><%= student.dob || 'N/A' %></span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Academic Details -->
        <div class="content-section">
            <div class="section-header">
                <h2><i class="fas fa-graduation-cap"></i> Academic Information</h2>
            </div>
            
            <div class="profile-grid">
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-building"></i></div>
                    <div class="details">
                        <label>Department</label>
                        <span><%= student.dept || 'N/A' %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-layer-group"></i></div>
                    <div class="details">
                        <label>Year</label>
                        <span><%= student.year || 'N/A' %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-calendar-alt"></i></div>
                    <div class="details">
                        <label>Academic Year</label>
                        <span><%= student.academicyear || 'N/A' %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-home"></i></div>
                    <div class="details">
                        <label>Category</label>
                        <span><%= student.category || 'N/A' %></span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Parent/Guardian Details -->
        <div class="content-section">
            <div class="section-header">
                <h2><i class="fas fa-users"></i> Parent/Guardian Information</h2>
            </div>
            
            <div class="profile-grid">
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-user-tie"></i></div>
                    <div class="details">
                        <label>Parent Name</label>
                        <span><%= student.parentname || 'N/A' %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-phone-alt"></i></div>
                    <div class="details">
                        <label>Parent Contact</label>
                        <span><%= student.parentnumber || 'N/A' %></span>
                    </div>
                </div>
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-map-marker-alt"></i></div>
                    <div class="details">
                        <label>Address</label>
                        <span><%= student.address || 'N/A' %></span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Account Status -->
        <div class="content-section">
            <div class="section-header">
                <h2><i class="fas fa-shield-alt"></i> Account Status</h2>
            </div>
            
            <div class="profile-grid">
                <div class="profile-item">
                    <div class="icon"><i class="fas fa-toggle-on"></i></div>
                    <div class="details">
                        <label>Account Status</label>
                        <span class="status-badge <%= student.status === 'Restrict' ? 'restricted' : 'active' %>">
                            <%= student.status === 'Restrict' ? 'Restricted' : 'Active' %>
                        </span>
                    </div>
                </div>
            </div>
            
            <% if(student.status === 'Restrict') { %>
                <div class="alert alert-danger" style="margin-top: 20px;">
                    <i class="fas fa-exclamation-triangle"></i>
                    Your account is currently restricted. Please contact the hostel administrator for more information.
                </div>
            <% } %>
        </div>
        
        <!-- Change Password -->
        <div class="content-section">
            <div class="section-header">
                <h2><i class="fas fa-key"></i> Change Password</h2>
            </div>
            
            <form action="/student/changepassword" method="POST">
                <div class="form-row">
                    <div class="form-group">
                        <label>Current Password</label>
                        <input type="password" name="currentPassword" required>
                    </div>
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" name="newPassword" required minlength="6">
                    </div>
                </div>
                <div class="form-group" style="max-width: 50%;">
                    <label>Confirm New Password</label>
                    <input type="password" name="confirmPassword" required minlength="6">
                </div>
                <button type="submit" class="btn-submit">
                    <i class="fas fa-save"></i> Update Password
                </button>
            </form>
        </div>
    </div>
    
    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('active');
            document.querySelector('.sidebar-overlay').classList.toggle('active');
            document.body.style.overflow = document.querySelector('.sidebar').classList.contains('active') ? 'hidden' : '';
        }
    </script>
</body>
</html>
