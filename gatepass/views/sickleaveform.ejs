<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sick Leave - Select Illness</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="icon" href="/images/4174.png">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 2rem 0;
    }

    .form-container {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 20px;
      padding: 3rem;
      margin: 2rem auto;
      max-width: 800px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
      backdrop-filter: blur(10px);
    }

    .student-info {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 1.5rem;
      border-radius: 15px;
      margin-bottom: 2rem;
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }

    .student-info img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      border: 3px solid white;
      object-fit: cover;
    }

    .student-details h3 {
      margin: 0;
      font-size: 1.5rem;
    }

    .student-details p {
      margin: 0.5rem 0 0 0;
      opacity: 0.9;
    }

    .illness-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin: 2rem 0;
    }

    .illness-option {
      position: relative;
      cursor: pointer;
    }

    .illness-option input[type="radio"] {
      position: absolute;
      opacity: 0;
      cursor: pointer;
    }

    .illness-card {
      background: white;
      border: 3px solid #e0e0e0;
      border-radius: 15px;
      padding: 1.5rem;
      text-align: center;
      transition: all 0.3s ease;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .illness-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .illness-option input[type="radio"]:checked + .illness-card {
      border-color: #667eea;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      transform: translateY(-5px);
      box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }

    .illness-icon {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
      color: #667eea;
    }

    .illness-option input[type="radio"]:checked + .illness-card .illness-icon {
      color: white;
    }

    .illness-name {
      font-weight: 600;
      font-size: 1.1rem;
      margin-top: 0.5rem;
    }

    .other-illness {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 2px solid #e0e0e0;
    }

    .other-illness input {
      width: 100%;
      padding: 1rem;
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .other-illness input:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .submit-btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      color: white;
      padding: 1rem 3rem;
      border-radius: 10px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      width: 100%;
      margin-top: 2rem;
      box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .submit-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .back-btn {
      background: #6c757d;
      border: none;
      color: white;
      padding: 0.75rem 2rem;
      border-radius: 10px;
      text-decoration: none;
      display: inline-block;
      margin-top: 1rem;
      transition: all 0.3s ease;
    }

    .back-btn:hover {
      background: #5a6268;
      color: white;
      transform: translateY(-2px);
    }

    @media (max-width: 768px) {
      .form-container {
        margin: 1rem;
        padding: 2rem 1.5rem;
      }

      .illness-grid {
        grid-template-columns: repeat(2, 1fr);
      }

      .student-info {
        flex-direction: column;
        text-align: center;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="form-container">
      <% if(message && message.length>0){ %>
        <div class="alert alert-danger">
          <i class="fas fa-exclamation-circle me-2"></i><%- message %>
        </div>
      <% } %>

      <% if(result && result.length > 0) { %>
        <div class="student-info">
          <% if(result[0].path) { %>
            <img src="<%=result[0].path%>" alt="Student Photo" />
          <% } else { %>
            <img src="/images/4174.png" alt="Student Photo" />
          <% } %>
          <div class="student-details">
            <h3><i class="fas fa-user me-2"></i><%= result[0].sname %></h3>
            <p><i class="fas fa-id-card me-2"></i>UID: <%= result[0].uid %></p>
            <p><i class="fas fa-graduation-cap me-2"></i><%= result[0].dept %> - <%= result[0].year %></p>
          </div>
        </div>

        <form action="/savesickleave/<%= result[0].uid %>" method="post">
          <h4 style="margin-bottom: 1rem; color: #333;">
            <i class="fas fa-stethoscope me-2"></i>Select Illness Type
          </h4>

          <div class="illness-grid">
            <label class="illness-option">
              <input type="radio" name="illness" value="Fever" required>
              <div class="illness-card">
                <i class="fas fa-thermometer-half illness-icon"></i>
                <div class="illness-name">Fever</div>
              </div>
            </label>

            <label class="illness-option">
              <input type="radio" name="illness" value="Cold" required>
              <div class="illness-card">
                <i class="fas fa-snowflake illness-icon"></i>
                <div class="illness-name">Cold</div>
              </div>
            </label>

            <label class="illness-option">
              <input type="radio" name="illness" value="Cough" required>
              <div class="illness-card">
                <i class="fas fa-lungs illness-icon"></i>
                <div class="illness-name">Cough</div>
              </div>
            </label>

            <label class="illness-option">
              <input type="radio" name="illness" value="Headache" required>
              <div class="illness-card">
                <i class="fas fa-head-side-virus illness-icon"></i>
                <div class="illness-name">Headache</div>
              </div>
            </label>

            <label class="illness-option">
              <input type="radio" name="illness" value="Stomach Ache" required>
              <div class="illness-card">
                <i class="fas fa-stomach illness-icon"></i>
                <div class="illness-name">Stomach Ache</div>
              </div>
            </label>

            <label class="illness-option">
              <input type="radio" name="illness" value="Body Pain" required>
              <div class="illness-card">
                <i class="fas fa-bone illness-icon"></i>
                <div class="illness-name">Body Pain</div>
              </div>
            </label>

            <label class="illness-option">
              <input type="radio" name="illness" value="Nausea" required>
              <div class="illness-card">
                <i class="fas fa-dizzy illness-icon"></i>
                <div class="illness-name">Nausea</div>
              </div>
            </label>

            <label class="illness-option">
              <input type="radio" name="illness" value="Dizziness" required>
              <div class="illness-card">
                <i class="fas fa-spinner illness-icon"></i>
                <div class="illness-name">Dizziness</div>
              </div>
            </label>
          </div>

          <div class="other-illness">
            <label for="otherIllness" style="font-weight: 600; color: #333; margin-bottom: 0.5rem; display: block;">
              <i class="fas fa-edit me-2"></i>Other (Specify)
            </label>
            <input type="text" id="otherIllness" name="other_illness" placeholder="Enter other illness type..." oninput="handleOtherInput()" />
          </div>

          <button type="submit" class="submit-btn">
            <i class="fas fa-save me-2"></i>Submit Sick Leave
          </button>
        </form>
      <% } else { %>
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle me-2"></i>Student not found. Please check the UID.
        </div>
      <% } %>

      <div style="text-align: center;">
        <a href="/sickleave" class="back-btn">
          <i class="fas fa-arrow-left me-2"></i>Back to Scan
        </a>
      </div>
    </div>
  </div>

  <script>
    function handleOtherInput() {
      const otherInput = document.getElementById('otherIllness');
      if (otherInput.value.trim() !== '') {
        document.querySelectorAll('input[name="illness"][type="radio"]').forEach(radio => {
          radio.checked = false;
        });
      }
    }

    // Handle radio button selection
    document.querySelectorAll('input[name="illness"][type="radio"]').forEach(radio => {
      radio.addEventListener('change', function() {
        const otherInput = document.getElementById('otherIllness');
        if (this.checked) {
          otherInput.value = '';
        }
      });
    });

    // Form validation
    document.querySelector('form').addEventListener('submit', function(e) {
      const selectedRadio = document.querySelector('input[name="illness"][type="radio"]:checked');
      const otherInput = document.getElementById('otherIllness');
      
      if (!selectedRadio && !otherInput.value.trim()) {
        e.preventDefault();
        alert('Please select an illness type or enter a custom illness');
        return false;
      }
    });
  </script>
</body>

</html>

