<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sick Leave - Scan ID</title>
  <link rel="stylesheet" href="/stylesheets/codescanner.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="icon" href="/images/4174.png">
  <style>
    .sickleave-container {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 20px;
      padding: 3rem;
      margin: 2rem auto;
      max-width: 600px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      backdrop-filter: blur(10px);
    }

    .scan-icon {
      font-size: 4rem;
      color: #667eea;
      margin-bottom: 1rem;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.1);
      }
    }

    .instruction-text {
      color: #666;
      font-size: 1.1rem;
      margin: 1rem 0;
    }

    .manual-uid-input {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 2px solid #e0e0e0;
    }
  </style>
  <script>
    var barcode = '';
    var interval;
    document.addEventListener('keydown', function(evt) {
      if (interval)
        clearInterval(interval);
      if (evt.code == 'Enter') {
        if (barcode)
          handleBarcode(barcode);
        barcode = '';
        return;
      }
      if (evt.key != 'Shift')
        barcode += evt.key;
      interval = setInterval(() => barcode = '', 20);
    });

    function handleBarcode(scanned_barcode) {
      location.href = "/sickleaveform/" + scanned_barcode;
    }

    function showdiv() {
      document.getElementById("staticuid").hidden = !document.getElementById("staticuid").hidden
    }

    function manualenter() {
      var UID = document.getElementById("inp").value;
      if (UID.trim() === '') {
        alert('Please enter a UID');
        return;
      }
      location.href = "/sickleaveform/" + UID;
    }

    function myfun() {
      if (typeof $ !== 'undefined') {
        $("div.yyyyy").fadeIn(300).delay(1500).fadeOut(400);
      }
    }
  </script>
</head>

<body onload="myfun()">
  <div class="bg-image" style="background-image: url('/images/tokenhomepagebg.png'); min-height: 100vh;">
    <center>
      <!-- <% if(message && message.length>0){ %>
        <div class="alert-danger yyyyy" style="margin-top: 1rem;">
          <h5><%- message %></h5>
        </div>
      <% } %> -->
      
      <div style="padding: 2rem 0;">
        <a href="/daterange">
          <img src="/images/logo.png" alt="Logo" style="max-width: 200px; height: auto;" />
        </a>
      </div>

      <div class="sickleave-container">
        <div style="text-align: center;">
          <i class="fas fa-heartbeat scan-icon"></i>
          <h2 style="color: #333; margin-bottom: 1rem;">Sick Leave Registration</h2>
          <p class="instruction-text">Scan student ID card or enter UID manually</p>
          
          <div id="pp"></div>
          
          <div id="staticuid" hidden class="manual-uid-input">
            <div for="inp" class="inp">
              <input type="text" id="inp" placeholder="&nbsp;">
              <span class="label text-dark">Enter UID</span>
              <span class="focus-bg"></span>
            </div>
            <br>
            <div>
              <button class="btn btn-primary" onclick="manualenter()" style="padding: 0.75rem 2rem; border-radius: 10px;">
                <i class="fas fa-arrow-right me-2"></i>Continue
              </button>
            </div>
          </div>

          <div style="margin-top: 2rem;">
            <button class="btn btn-outline-primary" onclick="showdiv()" style="padding: 0.75rem 2rem; border-radius: 10px;">
              <i class="fas fa-keyboard me-2"></i>Enter UID Manually
            </button>
          </div>

          <div style="margin-top: 2rem;">
            <a href="/daterange" class="btn btn-secondary" style="padding: 0.75rem 2rem; border-radius: 10px;">
              <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
          </div>
        </div>
      </div>
    </center>
  </div>
</body>

</html>

